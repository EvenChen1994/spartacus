{
  "$schema": "http://json-schema.org/schema",
  "$id": "CDPSchematics",
  "title": "CDP Schematics",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "debug": {
      "description": "Display additional details during the running process.",
      "type": "boolean",
      "default": false
    },
    "lazy": {
      "type": "boolean",
      "description": "Lazy load the CDP feature.",
      "default": true
    },
    "features": {
      "type": "array",
      "uniqueItems": true,
      "default": ["CDP"]
    },
    "javascriptUrl": {
      "type": "string",
      "description": "Location of the CDP Java Script SDK in Customer Data Platform",
      "x-prompt": "[CDP] What is the CDP JS SDK URL?"
    },
    "baseSite": {
      "type": "string",
      "description": "Name of the Spartcus base site",
      "x-prompt": "[CDP] What is the base site?",
      "default": "electronics-spa"
    },
    "sessionExpiration": {
      "type": "number",
      "description": "Session Expiration time in seconds",
      "x-prompt": "[CDP] What is the CDP Session expiration time (in seconds)?",
      "default": 3600
    }
  },
  "required": []
}
